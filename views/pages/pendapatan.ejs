<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <div class="container mt-5">
        <h3>Manajemen Pendapatan</h3>

        <!-- Form Input Pendapatan -->
        <div class="card mb-4">
            <div class="card-header">
                Tambah Pendapatan Baru
            </div>
            <div class="card-body">
                <form id="pendapatan-form" action="/api/income" method="POST">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="amount" class="form-label">Jumlah Pendapatan</label>
                            <input type="number" class="form-control" name="amount" required>
                        </div>
                        <div class="col-md-3">
                            <label for="date" class="form-label">Tanggal</label>
                            <input type="date" class="form-control" name="date" required>
                        </div>
                        <div class="col-md-3">
                            <label for="description" class="form-label">Deskripsi</label>
                            <input type="text" class="form-control" name="description" required>
                        </div>
                        <div class="col-md-3">
                            <label for="category" class="form-label">Kategori</label>
                            <input type="text" class="form-control" name="category" required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Simpan</button>
                </form>
            </div>
        </div>

        <!-- Filter Data -->
        <div class="card mb-4">
            <div class="card-header">
                Filter Data
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <label for="filter-tanggal" class="form-label">Tanggal Awal - Tanggal Akhir</label>
                        <form action="/filter" method="GET" class="d-flex mb-4">
                            <input type="date" name="startDate" class="form-control me-2" required>
                            <input type="date" name="endDate" class="form-control me-2" required>
                            <button type="submit" class="btn btn-primary">Cari</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabel Daftar Pendapatan -->
        <div class="card">
            <div class="card-header">
                Daftar Pendapatan
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Deskripsi</th>
                                <th>Jumlah</th>
                                <th>Kategori</th>
                                <th>Tanggal</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% incomes.forEach(income=> { %>
                            <tr>
                                <td>
                                    <%= income.description %>
                                </td>
                                <td>
                                    <%= income.amount %>
                                </td>
                                <td>
                                    <%= income.category %>
                                </td>
                                <td>
                                    <%= income.date.toLocaleDateString() %>
                                </td>
                                <td>
                                    <button class="btn btn-warning btn-sm" onclick="editIncome('<%= income._id %>')">Edit</button>
                                    <button class="btn btn-danger btn-sm" onclick="deleteIncome('<%= income._id %>')">Hapus</button>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Edit -->
    <div class="modal fade" id="editModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Pendapatan</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="edit-form">
                        <input type="hidden" id="edit-id">
                        <div class="mb-3">
                            <label class="form-label">Jumlah</label>
                            <input type="number" class="form-control" id="edit-amount" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tanggal</label>
                            <input type="date" class="form-control" id="edit-date" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Deskripsi</label>
                            <input type="text" class="form-control" id="edit-description" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Kategori</label>
                            <input type="text" class="form-control" id="edit-category" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                    <button type="button" class="btn btn-primary" onclick="updateIncome()">Simpan</button>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <%- include('../partials/footer.ejs'); %>
    </footer>
<!-- JavaScript untuk Edit dan Delete -->
<script>
    let currentId = '';

    function editIncome(id) {
        currentId = id;
        fetch(`/api/income/${id}`)
            .then(response => response.json())
            .then(data => {
                document.getElementById('edit-id').value = data.income._id;
                document.getElementById('edit-amount').value = data.income.amount;
                document.getElementById('edit-date').value = data.income.date.split('T')[0];
                document.getElementById('edit-description').value = data.income.description;
                document.getElementById('edit-category').value = data.income.category;
                new bootstrap.Modal(document.getElementById('editModal')).show();
            });
    }

    function updateIncome() {
        const data = {
            amount: document.getElementById('edit-amount').value,
            date: document.getElementById('edit-date').value,
            description: document.getElementById('edit-description').value,
            category: document.getElementById('edit-category').value
        };

        fetch(`/api/income/${currentId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
        })
            .then(response => response.json())
            .then(() => {
                window.location.reload();
            });
    }

    function deleteIncome(id) {
        if (confirm('Apakah Anda yakin ingin menghapus data ini?')) {
            fetch(`/api/income/${id}`, {
                method: 'DELETE'
            })
                .then(() => {
                    window.location.reload();
                });
        }
    }
</script>
</body>

</html>